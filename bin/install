#!/bin/bash -eux

case "$1" in
  -v|--version)
    version="$2"
esac

cp -r ${OPENSHIFT_MINERD_DIR}/versions/${version}/template/* ${OPENSHIFT_MINERD_DIR}/template
cp -r ${OPENSHIFT_MINERD_DIR}/versions/${version}/template/.openshift ${OPENSHIFT_MINERD_DIR}/template
mkdir -p ${OPENSHIFT_MINERD_DIR}/template/.openshift/config
cp ${OPENSHIFT_MINERD_DIR}/apache-activemq/conf/* ${OPENSHIFT_MINERD_DIR}/template/.openshift/config

echo "$version" > "$OPENSHIFT_MINERD_DIR/env/OPENSHIFT_MINERD_VERSION"

